<idea-plugin>
    <id>com.github.andrerab.ollamacompletionplugin</id>
    <name>Ollama completion</name>
    <version>0.0.1</version>
    <vendor>andrerab</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        AI-powered inline completion using a local Ollama LLM.
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <inline.completion.provider implementation="com.github.andrerab.ollamacompletionplugin.OllamaCompletionProvider"></inline.completion.provider>
    </extensions>

</idea-plugin>